<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Media Horizon</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/SeniorProject.styles.css" asp-append-version="true" />
</head>
<body>
    @inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand mx-5 text-white" asp-page="/index">Media Horizon</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse " id="navbarText">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 mx-auto gap-3">
                    <li class="nav-item">
                        <a class="nav-link active text-white" aria-current="page" asp-page="/index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#about">About Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-page="/departments">Departments</a>
                    </li>
                    @if (HttpContextAccessor.HttpContext.Session.GetString("admin") == "True")
                    {
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-page="/DashBoard/Dashboard">DashBoard</a>
                    </li>
                    }
                    <li class="nav-item ">
                        <a class="nav-link text-white" asp-page="/ServiceList">Services</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#faq">FAQ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#contact">Contact</a>
                    </li>
                </ul>
                <span class="navbar-text pp">
                    @if (string.IsNullOrEmpty(HttpContextAccessor.HttpContext.Session.GetString("Fname")))
                    {
                        <a asp-page="/Login" class="d-lg-block mx-5 img-fluid"><i class="bi bi-person-circle profile" style="color: white;"></i></a>
                    }
                    else
                    {
                        <h3 style="color: #fff; font-weight: 600; font-size: 1.2rem; margin-left: 10px;" >

                            Welcome<a href="\dashboard\userdashboard" style="cursor:pointer" class="text-white text-decoration-none "> @HttpContextAccessor.HttpContext.Session.GetString("Fname")</a>
                        </h3>
                    }
                </span>
            </div>
        </div>
    </nav>
            @RenderBody()

    <footer style="background-color: #f5f5f5;">
        <div class="container py-5">
            <div class="row">
                <div class="col-md-5 col-12">
                    <h5 class="" style="color: #5E84A1;">Media Horizon</h5>
                    <p class="lead">Join our newsletter to stay up to date on features and services.</p>
                    <div class="row">
                        <form class="form" method="post">
                            <div class="col-lg-9 col-10 align-items-center">
                                <input type="email" class="form-control" placeholder="Enter your email">
                            </div>
                            <div class="col-lg-8 col align-items-center subscribe">
                                <button type="submit" class="btn btn-outline-light border-2 text-dark my-3 border-black">Subscribe</button>
                            </div>
                        </form>
                    </div>
                        <p class="">By subscribing you agree to with our <u><a href="#" style="color: black;">Privacy Policy</a></u> and provide consent to receive updates from our company.</p>
                </div>
                <div class="col">
                    <h1 class="fs-6 ms-3 pages">Pages</h1>
                    <ul class="list-group list-group-flush ">
                        <li class="list-group-item"  style="background-color: #f5f5f5;">
                            <a asp-page="/index" class="text-decoration-none text-secondary">Home<i class="bi bi-arrow-right-short"></i></a>
                        </li>
                        <li class="list-group-item" style="background-color: #f5f5f5;">
                            <a href="#about"  class="text-decoration-none text-secondary">About Us<i class="bi bi-arrow-right-short"></i></a>
                        </li>
                        <li class="list-group-item" style="background-color: #f5f5f5;">
                            <a asp-page="/Departments"  class="text-decoration-none text-secondary">Departments<i class="bi bi-arrow-right-short"></i></a>
                        </li>
                        <li class="list-group-item" style="background-color: #f5f5f5;">
                            <a asp-page="/ServiceList"  class="text-decoration-none text-secondary">Services<i class="bi bi-arrow-right-short"></i></a>
                        </li>
                        <li class="list-group-item" style="background-color: #f5f5f5;">
                            <a href="#contact"  class="text-decoration-none text-secondary">Contact<i class="bi bi-arrow-right-short"></i></a>
                        </li>
                        <li class="list-group-item" style="background-color: #f5f5f5;">
                            <a href="#faq"  class="text-decoration-none text-secondary">FAQ<i class="bi bi-arrow-right-short"></i></a>
                        </li>
                    </ul>
                </div>
                <div class="col">
                    <h1 class=" fs-6 ms-3">Follow Us</h1>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item" style="background-color: #f5f5f5;">
                            <a href="https://www.instagram.com/hsenhydr" class="text-decoration-none text-secondary">
                                <i class="bi bi-instagram pe-2"></i>Instagram
                            </a>
                        </li>
                        <li class="list-group-item" style="background-color: #f5f5f5;">
                            <a href="https://www.linkedin.com/in/hsenhydr" class="text-decoration-none text-secondary">
                                <i class="bi bi-linkedin pe-2"></i>LinkedIn
                            </a>
                        </li>
                        <li class="list-group-item" style="background-color: #f5f5f5;">
                            <a href="https://twitter.com/hsenhydrr" class="text-decoration-none text-secondary">
                                <i class="bi bi-twitter pe-2"></i>Twitter
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="container">
            <hr>
            <div class="row pb-5">
                <div class="col-md-8 col-12 text-secondary ">Made by <u>Hussein Haidar</u> © 2024</div>
                <div class="col-md-2 col-6 text-end"><a href="#" class="text-decoration-none text-dark">Privacy Policy</a></div>
                <div class="col-md-2 col-6 text-end"><a href="#" class="text-decoration-none text-dark">Terms of Service</a></div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>